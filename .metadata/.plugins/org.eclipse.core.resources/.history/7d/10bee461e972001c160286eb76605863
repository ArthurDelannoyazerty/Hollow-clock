#include "config_moteur.h"
#include "stm32f1xx_hal.h"



#define DELAYSTEP 10





bonjij jpl bh;



int main(void){


	while(1){
		if(readButton(void)){	//si bouton appuyé -> le moteur tourne selon valeur (potentiometre non pas de valeur analogique!!) dans la mémoire -> DELAYSTEP

			HAL_Delay(DELAYSTEP);
		}
	}
}



void writeLED(bool_e b){
	HAL_GPIO_WritePin(LED_GREEN_GPIO, LED_GREEN_PIN, b);
}

bool_e readButton(void){
	return HAL_GPIO_ReadPin(BLUE_BUTTON_GPIO, BLUE_BUTTON_PIN);
}
